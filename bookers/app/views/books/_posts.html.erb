<div class = "new_book">
	<% if @book.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

	<h2>New book</h2>
	<%= form_for(book) do |f| %>

	    <h3>タイトル</h3>
	    <%= f.text_field :title %>

	    <h3>本文</h3>
	    <%= f.text_area :body %>

	    <%= f.submit 'Create Book' %>
	<% end %>
</div>


