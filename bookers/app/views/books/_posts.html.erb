<div class = "new_book">
	<% if @book.errors.any? %>
	<%= pluralize(@book.errors.count,"error") %>
    <div class = "alert alert-warning">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

	<h2>New book</h2>
	<%= form_for(book) do |f| %>

	    <h3>Title</h3>
	    <%= f.text_field :title %>

	    <h3>Opinion</h3>
	    <%= f.text_area :body %>
		<div claas="low">
	    	<%= f.submit 'Create Book' %>
	    </div>
	<% end %>
</div>


