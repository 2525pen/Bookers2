<div class= "user_plofile">

    <h2>User info</h2>
    	<table class = "table">
        <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.png" ,size: '40x40' %></tr>

      <tr>
    	  <th>name</th>
    	  <th><%= user.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= user.introduction %></th>
      </tr>
      <% if user == current_user %>
      <tr>
        <%= link_to 'edit', edit_user_path(user),class: 'btn btn-default' %>
      </tr>
      <% end %>
</table>
</div>