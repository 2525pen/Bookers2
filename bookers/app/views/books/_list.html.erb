</table>


<a class = "new_book">
	<!-- 以下投稿フォーム -->
	<h2>New book</h2>
	<!-- form_for部分 -->
	<%= form_for(book) do |f| %>

	    <h3>タイトル</h3>
	    <%= f.text_field :title %>

	    <h3>本文</h3>
	    <%= f.text_area :body %>

	    <%= f.submit 'Create Book' %>
	<% end %>
</a>

