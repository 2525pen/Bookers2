<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<%= render 'books/profile' , user: current_user %>
				<%= render 'books/posts', book: @book %>
			</div>
			<div class="col-xs-9">
				<h2>Books</h2>
					<table class="table table-hover table-inverse">
							<thead>
								<tr>
									<th>Title</th>
									<th>Opinion</th>
								</rt>
							</thead>

							<tbody>
						   		<% @books.each do |book| %>
									<tr>
										<td><%= link_to(book.user) do %>
											<%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, fallback: "no_image.png" ,size: '40x40' %>
											<% end %>
										</td>
										<td>
											<%= link_to book.title, book_path(book) %>
										</td>
										<td>
											<%= book.body %>
										</td>
									</tr>
								<% end %>
							</tbody>
					</table>
			</div>
		</div>
	</div>
</div>

