<!-- プロフの編集ページ -->
<!-- 上から名前、写真、紹介文、変更ボタン -->

	<%= form_for(@user) do |f| %>

		<div class = "form-group">

			<div class="field">
		    	<label for="user_name">Name</label>
		    	<%= f.text_field :name %>
		    </div>

			<div class="field">
		    	<label for="user_name">Image</label>
				<%= f.attachment_field :image %>
			</div>

			<div class="field">
		    	<label for="user_name">Introduction</label>
		    	<%= f.text_field :introduction %>
		    </div>
		    <div class="field">
		    	<%= f.submit "Update User" %>
		    </div>
		</div>
    <% end %>
