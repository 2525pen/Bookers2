<h1>UsersInfo#edit</h1>
<p>Find me in app/views/users_info/edit.html.erb</p>

<h2>User info</h2>
	<%= form_for(@user) do |f| %>

		<div class = "form-group">

			<div class="field">
		    	<label for="user_name">Name</label>
		    	<%= f.text_field :name %>
		    </div>

			<div class="field">
		    	<label for="user_name">Image</label>
				<%= attachment_image_tag user_info, :image %>
			</div>

			<div class="field">
		    	<label for="user_name">Introduction</label>
		    	<%= f.text_field :introduction %>
		    </div>
		    <div class="field">
		    	<%= f.submit "変更を保存" %>
		    </div>
		</div>
    <% end %>
