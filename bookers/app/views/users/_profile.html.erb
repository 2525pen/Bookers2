<h2>User info</h2>
  <table class='table'>
        <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.png", size: '40x40'  %></tr>

        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
  </table>

  <div class= "row">
    <% if user == current_user %>
      <th> <%= link_to 'edit', edit_user_path(user),class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_11405' %></th>
    <% end  %>
  </div>
